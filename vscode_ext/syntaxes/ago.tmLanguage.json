{
  "$schema": "https://raw.githubusercontent.com/martinring/tmlanguage/master/tmlanguage.json",
  "name": "Ago",
  "scopeName": "source.ago",
  "patterns": [
    {
      "include": "#comments"
    },
    {
      "include": "#keywords"
    },
    {
      "include": "#strings"
    },
    {
      "include": "#numbers"
    },
    {
      "include": "#operators"
    },
    {
      "include": "#entities"
    }
  ],
  "repository": {
    "comments": {
      "patterns": [
        {
          "name": "comment.line.number-sign.ago",
          "match": "#.*"
        }
      ]
    },
    "keywords": {
      "patterns": [
        {
          "name": "keyword.control.ago",
          "match": "\\b(si|aluid|pro|dum|frio|pergo|redeo|omitto|des|in|inporto)\\b"
        },
        {
          "name": "keyword.operator.logical.ago",
          "match": "\\b(et|vel|non)\\b"
        },
        {
          "name": "keyword.operator.comparison.ago",
          "match": "\\b(est|in)\\b"
        },
        {
          "name": "constant.language.ago",
          "match": "\\b(verum|falsus|inanis|id)\\b"
        }
      ]
    },
    "strings": {
      "name": "string.quoted.double.ago",
      "begin": "\"",
      "end": "\"",
      "patterns": [
        {
          "name": "constant.character.escape.ago",
          "match": "\\\\."
        }
      ]
    },
    "numbers": {
      "patterns": [
        {
          "name": "constant.numeric.float.ago",
          "match": "\\b[0-9]*\\.[0-9]+\\b"
        },
        {
          "name": "constant.numeric.integer.ago",
          "match": "\\b[0-9]+\\b"
        },
        {
          "name": "constant.numeric.roman.ago",
          "match": "\\b[MCDLXIV]+\\b"
        }
      ]
    },
    "operators": {
      "patterns": [
        {
          "name": "keyword.operator.assignment.ago",
          "match": ":="
        },
        {
          "name": "keyword.operator.reassignment.ago",
          "match": "="
        },
        {
          "name": "keyword.operator.comparison.ago",
          "match": "==|!=|>=|<=|>|<"
        },
        {
          "name": "keyword.operator.arithmetic.ago",
          "match": "[+\\-*/%]"
        },
        {
          "name": "keyword.operator.bitwise.ago",
          "match": "[&|^]"
        },
        {
          "name": "keyword.operator.range.ago",
          "match": "\\.\\.|\\.<"
        },
        {
          "name": "keyword.operator.elvis.ago",
          "match": "\\?:"
        }
      ]
    },
    "entities": {
      "patterns": [
        {
          "name": "entity.name.function.ago",
          "match": "([A-Za-z_][A-Za-z_0-9]*)(?=\\s*\\()"
        }
      ]
    }
  }
}